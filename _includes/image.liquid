{% assign style = "" -%}
{% if include.width -%}
    {% assign style = style | append: "width: " | append: include.width | append: ";" -%}
{% endif -%}
{% if include.height -%}
    {% assign style = style | append: "height: " | append: include.height | append: ";" -%}
{% endif -%}
{% if include.max-width -%}
    {% assign style = style | append: "max-width: " | append: include.max-width | append: ";" -%}
{% endif -%}
{% if include.max-height -%}
    {% assign style = style | append: "max-height: " | append: include.max-height | append: ";" -%}
{%- endif -%}

<img src="{{include.src}}"
{%- if include.align %} align="{{include.align}}" {%- endif %}
{%- if include.alt %} alt="{{include.alt}}" {%- endif %}
{%- unless style == "" %} style="{{style}}" {%- endunless %} />